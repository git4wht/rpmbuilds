<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.alice</groupId>
    <artifactId>CreateRpms-Banner</artifactId>
    <version>1.0.0</version>

    <properties>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
    </properties>
    <build>
        <finalName>banner</finalName>
        <plugins>
            <plugin>
                <groupId>de.dentrassi.maven</groupId>
                <artifactId>rpm</artifactId>
                <version>1.8.0</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>rpm</goal>
                        </goals>
                        <configuration>
                            <version>1.0.0</version>
                            <forceRelease>true</forceRelease>
                            <packageName>banner</packageName>
                            <outputFileName>banner.rpm</outputFileName>

                            <signature>
                                <skip>true</skip> 
                            </signature>
                            <rulesets>
                                <ruleset>
                                    <id>default</id>
                                    <rules>
                                        <rule>
                                            <when>
                                                <type>directory</type>
                                            </when>
                                            <mode>0750</mode>
                                        </rule>
                                        <rule>
                                            <when>
                                                <prefix>/usr/bin/</prefix>
                                            </when>
                                            <mode>0755</mode>
                                        </rule>
                                        <rule>
                                            <when>
                                                <prefix>/etc/init.d/</prefix>
                                            </when>
                                            <mode>0755</mode>
                                        </rule>
                                        <rule>
                                            <when>
                                                <prefix>/etc/profile.d/</prefix>
                                            </when>
                                            <mode>0644</mode>
                                        </rule>
                                        <rule>
                                            <when>
                                                <prefix>/etc/</prefix>
                                            </when>
                                            <configuration>true</configuration>
                                            <verify>
                                                <user>true</user>
                                                <group>true</group>
                                                <linkto>true</linkto>
                                            </verify>
                                        </rule>
                                        <rule>
                                            <when>
                                                <prefix>/usr/share/doc</prefix>
                                            </when>
                                            <documentation>true</documentation>
                                        </rule>
                                        <rule>
                                            <when>
                                                <suffix>README.txt</suffix>
                                            </when>
                                            <readme>true</readme>
                                        </rule>
                                    </rules>
                                </ruleset>
                            </rulesets>

                            <entries>
                                <entry>
                                    <name>/etc/profile.d/</name>
                                    <collect>
                                       <from>banner/etc/profile.d/</from>
                                    </collect>
                                    <ruleset>default</ruleset>
                                </entry>
                            </entries>

                            <beforeInstallation>
                                <file>common-service/control/preinst</file>
                            </beforeInstallation>
                            <afterInstallation>
                                <file>common-service/control/postinst</file>
                            </afterInstallation>
                            <beforeRemoval>
                                <file>common-service/control/prerm</file>
                            </beforeRemoval>
                            <afterRemoval>
                                <file>common-service/control/postrm</file>
                            </afterRemoval>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>